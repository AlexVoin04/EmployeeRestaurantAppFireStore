<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/rounded_button"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Азу из говядины по татарски"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Цена:"
                android:textColor="@color/white"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/et_order_cost"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/rounded_et_white"
                android:gravity="top"
                android:hint="Стоимость"
                android:inputType="number"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:textColor="@color/btnColor"
                android:textColorHint="@color/btnColor" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Дата и время заказа:"
                android:textColor="@color/white"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv_date_time"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/rounded_et_white"
                android:gravity="top"
                android:hint="Дата заказа"
                android:inputType="number"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:textColor="@color/btnColor"
                android:textColorHint="@color/btnColor" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:src="@drawable/ic_delete"
            android:background="@drawable/rounded_layout_back" />
    </LinearLayout>

</LinearLayout>